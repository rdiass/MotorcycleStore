@using MotorcycleStore.WebApp.MVC.Extensions
@model IEnumerable<MotorcycleViewModel>

@{
    ViewData["Title"] = "All our products";
}

<section>
    <div>
        <div style="background-image: url(images/banners/Template.jpg); height: 100%; background-position: center; background-repeat: no-repeat; background-size: cover">
            <div style="text-align: center;">
                <img src="~/images/banners/motorcyclestore.png" />
            </div>
        </div>
        <div class="container" style=" padding-top: 20px">
            <div class="row">
                @{
                    foreach (var produto in Model.OrderBy(p => p.Model))
                    {
                        <div class="col-md-3">
                            <div href="#" class="card card-product-grid">
                                <a asp-controller="Catalog" asp-action="Detail" asp-route-id="@produto.Id" class="img-wrap">
                                    <img src="~/images/produtos/camiseta1.jpg" alt="@produto.Model">
                                </a>
                                <figcaption class="info-wrap">
                                    <a asp-controller="Catalog" asp-action="Detail" asp-route-id="@produto." class="title">
                                        <b> @produto.Model</b>
                                    </a>

                                    <small class="card-text">
                                        @this.MessageAvailability(produto.Stock)<br /><br />
                                        @produto.Description
                                    </small>
                                </figcaption>
                                <div class="card-footer price mt-1">
                                    <h3>@this.FormatCurrency(produto.Price)</h3>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>